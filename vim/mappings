---@type MappingsTable
local M = {}

M.general = {
  n = {
    [";"] = { ":", "enter command mode", opts = { nowait = true } },
    ["<leader>q"] = {"<cmd> :q! <CR>", "快速退出"},
    ["<leader>w"] = {"<cmd> :w <CR>", "快速保存"},
    ["("] = {"<cmd> :bp <CR>", "切换到上个 tab"},
    [")"] = {"<cmd> :bn <CR>", "切换到下个 tab"},
    ["<leader>x"] = {"<cmd> :bw <CR>", "关闭当前 buffer"},
    ["<leader>h"] = {"<cmd> NvCheatsheet<CR>", "快速查找文件"},
  },
}

-- more keybinds!

return M
